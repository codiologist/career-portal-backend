generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/////////// 
enum Role {
  HR
  USER
  ADMIN
  MODERATOR
}

model User {
  id        String   @id @default(uuid())
  fullName  String?
  email     String   @unique
  phone     String?  @unique
  isActive  Boolean  @default(true)
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  profile Profile?
}

////// Profile //////////////////////////////

model Profile {
  id             String   @id @default(uuid())
  avater         String?
  dob            DateTime
  address        String
  country        String
  zip            String
  maritalStatus  Boolean
  bio            String
  isVerified     Boolean
  totalExprience String
  protfolioLint  String
  socialLink     String[]
  resumeUpload   String

  workExprience WorkExprience[]
  education     Education[]
  skill         String[]

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WorkExprience {
  id              String   @id @default(uuid())
  jobTitle        String
  companyTitle    String
  companyLocation String
  jobRole         String
  startDate       DateTime

  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId String  @unique
}

model Education {
  id        String   @id @default(uuid())
  degree    String
  academy   String
  startDate DateTime
  endDate   DateTime

  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId String  @unique
}

///// Profile ////////////////////

///// Job Post /////

enum JobType {
  FULL_TIME
  REMOTE
  HYBIRD
}

model Job {
  id               String       @id @default(uuid())
  jobUniqueId      String       @unique
  responsibilities String[]
  features         String[]
  requirments      String[]
  requirSkills     String[]
  jobType          JobType
  category         JobCategory?
  salaryRange      String
  location         String
  expDate          DateTime
  createdAt        DateTime     @default(now())
  jobCategoryId    String
}

model JobCategory {
  id    String  @id @default(uuid())
  title String
  desc  String?
  job   Job     @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId String  @unique
}

///// Job Post /////

model JobAlart {
  id    String @id @default(uuid())
  email String @unique
}
